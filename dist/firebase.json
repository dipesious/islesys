{

  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },

  "hosting": {
    "site": "islesys001",
    "public": "client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
  
  "rewrites": [
    {
      "source": "/api/**",
      "function": "server_global"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
  }

}
